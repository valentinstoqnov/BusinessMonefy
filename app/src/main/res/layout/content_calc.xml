<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.elsys.valiolucho.calculator.CalcActivity"
    tools:showIn="@layout/activity_calc">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calcDisplay" />

        <LinearLayout

            android:id="@+id/sen"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seven"
                android:id="@+id/buttonSeven"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/eight"
                android:id="@+id/buttonEight"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/nine"
                android:id="@+id/buttonNine"/>

            <Button
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDelete"
                android:text="@string/delete"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ffs"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/four"
                android:id="@+id/buttonFour"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/five"
                android:id="@+id/buttonFive"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/six"
                android:id="@+id/buttonSix"/>

            <Button
                android:id="@+id/buttonBackspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backspace"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ott"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/one"
                android:id="@+id/buttonOne"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two"

                android:id="@+id/buttonTwo"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/three"
                android:id="@+id/buttonThree"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMinus"
                android:text="@string/minus"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/zpp"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/zero"
                android:id="@+id/buttonZero"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/point"
                android:id="@+id/buttonPoint"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDivide"
                android:text="@string/divide"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPlus"
                android:text="@string/plus"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/snd"

            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMultiply"
                android:text="@string/multiply"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNegative"
                android:text="@string/negative"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGradiation"
                android:text="@string/gradiation"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEqual"
                android:text="@string/equals"
                />

        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/line">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancel"
            android:text="@string/cancel"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOk"
            android:text="@string/okey"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/zero"
        android:id="@+id/textView"
        android:layout_above="@+id/ll1"
        android:layout_alignEnd="@+id/ll1" />

</RelativeLayout>